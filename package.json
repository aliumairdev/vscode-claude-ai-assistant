{
  "name": "ai-assistant",
  "displayName": "AI Assistant",
  "description": "AI-powered code suggestions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/ai-assistant.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "ai-assistant.getSuggestion",
        "title": "Get AI Suggestion"
      }
    ],
    "configuration": {
      "title": "AI Assistant",
      "properties": {
        "ai-assistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the AI service"
        },
        "ai-assistant.apiUrl": {
          "type": "string",
          "default": "https://api.example.com/v1/completions",
          "description": "URL for the AI service API"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
}
